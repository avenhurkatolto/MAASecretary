<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="10dp">

        <TextView 
            android:id="@+id/oven_textview_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Oven 1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/oven_textview_timer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="00:00:00"
            android:gravity="center_horizontal"
            />
        
        <Button
            android:id="@+id/oven_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="10dp">

        <TextView 
            android:id="@+id/oven_textview_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Oven 2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/oven_textview_timer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="00:00:00"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/oven_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Start-ooo"/>

    </LinearLayout>

</LinearLayout>